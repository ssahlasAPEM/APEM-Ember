<table class="ui compact celled definition table">

  <thead>
    <tr>
      <th></th>
      <th>Username</th>
      <th>Type</th>
      <th>Opportunities</th>
      <th>Active</th>
    </tr>
  </thead>

  <tbody>

    {{#each model as |usr|}}

      <tr>
        <td>
          {{input type="checkbox" checkedBinding="selected" class="checkbox"
          disabled=false change=(action 'onSelection' usr) checked=usr.selected}}
        </td>
        <td>
          {{#link-to "users.user.detail" usr clss="row-link"}}
            {{usr.username}}
          {{/link-to}}
        </td>
        <td>
          {{#link-to "users.user.detail" usr clss="row-link"}}
            {{usr.type}}
          {{/link-to}}
        </td>
        <td>
          {{#link-to "users.user.detail" usr clss="row-link"}}
            {{usr.numOpportunities}}
          {{/link-to}}
        </td>
        <td>
          {{input type="checkbox" class="checkbox" checked=usr.active disabled=true}}
        </td>
      </tr>

    {{/each}}
    
  </tbody>

  <tfoot class="full-width">
    <tr>
      <th></th>
      <th colspan="4">
        {{#link-to 'users.new' tagName='div' class="ui right floated small button" activeClass=""}}
          New User
        {{/link-to}}

        {{confirm-delete isDisabled=disableDelete selectedUsers=selectedItems}}
      </th>
    </tr>
  </tfoot>
</table>
