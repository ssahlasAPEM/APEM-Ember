<div class="field gap1 side-padded-fourteen">
  <label>Stage</label>
  <div class="ui four top attached steps">
    <div class="quote step" {{action 'onStepClick' 'quote'}}>
      <i class="green check icon quote-step-icn hidden"></i>
      <div class="content">
        <div class="title">Quote</div>
        {{#if quoteEvent}}
          <div class="description">
            {{date-picker
              action=(action 'updateStageDate' quoteEvent)
              placeholder=quoteEvent.date
              valueFormat='MM-DD-YYYY'
              format='MM-DD-YYYY'
              utc=false
              time=false
              date=quoteEvent.date
              allowBlank=true
              class="label-like-date-picker"
              buttonClasses='label-like'}}
          </div>
        {{/if}}
      </div>
    </div>
    <div class="sample step" {{action 'onStepClick' 'sample'}}>
      <i class="green check icon sample-step-icn hidden"></i>
      <div class="content">
        <div class="title">Sample</div>
        {{#if sampleEvent}}
        {{date-picker
          action=(action 'updateStageDate' quoteEvent)
          placeholder=sampleEvent.date
          valueFormat='MM-DD-YYYY'
          format='MM-DD-YYYY'
          utc=false
          time=false
          date=sampleEvent.date
          allowBlank=true
          class="label-like-date-picker"
          buttonClasses='label-like'}}
        {{/if}}
        <!-- <div class="description">Enter billing information</div> -->
      </div>
    </div>
    <div class="approval step" {{action 'onStepClick' 'approval'}}>
      <i class="green check icon approval-step-icn hidden"></i>
      <div class="content">
        <div class="title">Approval</div>
        {{#if approvalEvent}}
        {{date-picker
          action=(action 'updateStageDate' quoteEvent)
          placeholder=approvalEvent.date
          valueFormat='MM-DD-YYYY'
          format='MM-DD-YYYY'
          utc=false
          time=false
          date=approvalEvent.date
          allowBlank=true
          class="label-like-date-picker"
          buttonClasses='label-like'}}
        {{/if}}
      </div>
    </div>
    <div class="production step" {{action 'onStepClick' 'production'}}>
      <i class="green check icon production-step-icn hidden"></i>
      <div class="content">
        <div class="title">Production</div>
        {{#if productionEvent}}
        {{date-picker
          action=(action 'updateStageDate' quoteEvent)
          placeholder=productionEvent.date
          valueFormat='MM-DD-YYYY'
          format='MM-DD-YYYY'
          utc=false
          time=false
          date=productionEvent.date
          allowBlank=true
          class="label-like-date-picker"
          buttonClasses='label-like'}}
        {{/if}}
      </div>
    </div>
  </div>
</div>
