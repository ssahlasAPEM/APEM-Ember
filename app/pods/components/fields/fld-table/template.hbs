<table class="ui table ui-table">

  <thead>
    <tr>
      <th>Field Name</th>
      <th>Type</th>
      <th>Required</th>
    </tr>
  </thead>

  <tbody>

    {{#each model as |fld|}}
      <tr>
        <td>{{#link-to "fields" fld clss="row-link"}}
          {{fld.label}}
        {{/link-to}}</td>
        <td>{{#link-to "fields" fld clss="row-link"}}
          {{fld.type}}
        {{/link-to}}</td>
        <td>
          {{#link-to "fields" fld clss="row-link"}}
            {{input type="checkbox" class="" checked=fld.required disabled=true}}
          {{/link-to}}
        </td>
      </tr>
    {{/each}}

  </tbody>

</table>
