<table class="ui table ui-table">

  <thead>
    <tr>
      <th>Field Name</th>
      <th>Visible</th>
      <th>Required</th>
    </tr>
  </thead>

  <tbody>

    {{#each model as |fld|}}
      <tr>
        <td>
          {{fld.label}}
        </td>
        <td>
          {{input type="checkbox" class="" checked=fld.visible change=(action 'onVisibleChange')}}
        </td>
        <td>
          {{input type="checkbox" class="" checked=fld.required change=(action 'onRequiredChange')}}
        </td>
      </tr>
    {{/each}}

  </tbody>

</table>
