{{input type="button"
  value="Delete User"
  class="ui right floated small button"
  click=(action "openInviteForm") disabled=isDisabled}}

{{#ui-modal name="user-invite-form" class="modal" }}
  <div class="header">Delete Confirmation</div>
  <div class="content">
    <p>The selected users will be deleted. Continue?</p>
  </div>
  <div class="actions right">
    <div class="ui cancel button" {{action 'approveDelete'}}>Cancel</div>
    <div class="ui approve button positive" {{action 'approveDelete'}}>Ok</div>
  </div>

{{/ui-modal}}
{{yield}}
