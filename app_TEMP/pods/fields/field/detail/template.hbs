<div class="ui content">
  <h3 class="subtitle">Edit Field</h3>
  <br>

  <div class="validation-errors">
      {{error-message errors=serverErrors}}
  </div>

  <div class="details">

    <label for="username"><strong>Field Label:</strong></label>
    <div class="ui input ">{{model.label}}</div>

    <br/><br/>

    <div class="ui input">
      {{input type="checkbox" checked=model.required}}
    </div><label for="password">Required:</label>

    <br/><br/>
    <h3>Form Value Management</h3>
    <div class="field-settings-box">
      {{model.options}}
    </div>

    <br/><br/>
    {{#link-to 'fields' tagName='div' class="ui small button" activeClass=""}}
      Cancel
    {{/link-to}}
    <div class="ui small button" {{action 'updateField'}}>
      Update Field
    </div>

  </div>
</div>
